pipeline {
    agent any

    environment {
        SONAR_SCANNER_HOME = '/opt/sonar-scanner-5.0.1.3006-linux'
        PATH = "${env.HOME}/.local/bin:${env.PATH}" // Ensure pip --user binaries are on PATH
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                sh '''
                    echo "Installing Python dependencies if needed..."
                    # Install pip and pytest if missing
                    python3 -m pip install --upgrade pip --user
                    python3 -m pip install pytest --user

                    # Install requirements if requirements.txt exists
                    if [ -f requirements.txt ]; then
                        echo "Installing additional dependencies from requirements.txt..."
                        python3 -m pip install -r requirements.txt --user
                    fi

                    echo "Running tests..."
                    pytest || exit 1
                '''
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh '''
                        echo "Running SonarQube analysis..."
                        ${SONAR_SCANNER_HOME}/bin/sonar-scanner \
                          -Dsonar.projectKey=python-project \
                          -Dsonar.sources=. \
                          -Dsonar.host.url=http://localhost:9000 \
                          -Dsonar.login=squ_d3bfced454fd14a75e0c25133d47b715e7123505
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }

    post {
        failure {
            echo "Pipeline failed! Check build/tests/SonarQube results."
        }
        success {
            echo "Pipeline succeeded! Tests passed and SonarQube Quality Gate cleared."
        }
    }
}
