pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                sh '''
                    echo "Installing Python dependencies..."
                    python3 -m pip install --upgrade pip --user
                    python3 -m pip install -r requirements.txt --user

                    echo "Running tests..."
                    pytest  # fail pipeline if tests fail
                '''
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh '''
                        echo "Running SonarQube analysis..."
                        # Using system-installed sonar-scanner
                        /opt/sonar-scanner-5.0.1.3006-linux/bin/sonar-scanner \
                          -Dsonar.projectKey=python-project \
                          -Dsonar.sources=. \
                          -Dsonar.host.url=http://localhost:9000 \
                          -Dsonar.login=squ_d3bfced454fd14a75e0c25133d47b715e7123505
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }

    post {
        failure {
            echo "Pipeline failed! Check build/tests/SonarQube results."
        }
        success {
            echo "Pipeline succeeded! All tests passed and SonarQube Quality Gate cleared."
        }
    }
}
