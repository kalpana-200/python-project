pipeline {
    agent any

    environment {
        // Set SonarScanner path installed on Jenkins node
        SONAR_SCANNER_HOME = '/opt/sonar-scanner-5.0.1.3006-linux'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                sh '''
                    echo "Updating PATH for user-installed pip packages..."
                    export PATH=$HOME/.local/bin:$PATH

                    # Only install requirements if file exists
                    if [ -f requirements.txt ]; then
                        echo "Installing Python dependencies from requirements.txt..."
                        python3 -m pip install --upgrade pip --user
                        python3 -m pip install -r requirements.txt --user
                    else
                        echo "No requirements.txt found, skipping dependency installation."
                    fi

                    echo "Running tests..."
                    # Run pytest, fail pipeline if tests fail
                    pytest || exit 1
                '''
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh '''
                        echo "Running SonarQube analysis..."
                        ${SONAR_SCANNER_HOME}/bin/sonar-scanner \
                          -Dsonar.projectKey=python-project \
                          -Dsonar.sources=. \
                          -Dsonar.host.url=http://localhost:9000 \
                          -Dsonar.login=squ_d3bfced454fd14a75e0c25133d47b715e7123505
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }

    post {
        failure {
            echo "Pipeline failed! Check build/tests/SonarQube results."
        }
        success {
            echo "Pipeline succeeded! Tests passed and SonarQube Quality Gate cleared."
        }
    }
}
